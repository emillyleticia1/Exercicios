<Button@Button>:
    background_color: 0, 0, 0, 0
    background_normal: ''
    background_down: ''
    font_size: 32
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: self.pos
            size: self.size
    font_size: 36
    size_hint: None, None
    size: 85, 85
    border_radius: [10]

<Calculadora>:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(10)

    BoxLayout:
        size_hint_y: None
        height: '100dp'
        TextInput:
            id: display
            font_size: 32
            readonly: True
            halign: 'right'
            valign: 'middle'
            multiline: False
            size_hint_x: 1
            height: '100dp'
            background_color: 1, 1, 1, 1
            foreground_color: 0, 0, 0, 1
            padding: [dp(10), (self.height - self.line_height) / 2]

    GridLayout:
        cols: 4
        spacing: dp(10)
        padding: dp(10)

        Button:
            text: '7'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '8'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '9'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '/'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '4'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '5'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '6'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '*'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '1'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '2'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '3'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '-'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: 'C'
            on_press: root.limpar_display()
            color: (1,0,0,1)
        Button:
            text: '0'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)
        Button:
            text: '='
            on_press: root.calcular()
            color: (0,1,0,1)
        Button:
            text: '+'
            on_press: root.atualizar_display(self.text)
            color: (0,0,0,1)